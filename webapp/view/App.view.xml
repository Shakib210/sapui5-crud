<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<!-- shell dia 2 side e color kore majhe nia ase. -->
	<Shell>
		<App class="crud">
			<pages>
				<Page title="{i18n>homePageTitle}">
					<FlexBox class="sapUi">
						<Input
							id="firstName"
							placeholder="Enter First Name"
							class="inputStyle"
						/>
						<Input
							id="lastName"
							placeholder="Enter Last Name"
							class="inputStyle"
						/>
						<Input
							id="address"
							placeholder="Enter Address"
							class="inputStyle"
						/>
						<Input
							id="age"
							placeholder="Enter Age"
							class="inputStyle"
						/>
						<Button
							activeIcon=""
							icon="sap-icon://add-employee"
							text="Save"
							width=""
							class="buttonStyle"
						/>
					</FlexBox>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>