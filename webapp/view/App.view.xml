<mvc:View
	controllerName="sap.ui.crud.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
>
	<!-- shell dia 2 side e color kore majhe nia ase. -->
	<Shell>
		<App class="sapUiSizeCompact">
			<pages>
				<Page title="{i18n>peoplePageTitle}">
					<Input
						id="userName"
						valueLiveUpdate="true"
						width="20%"
						placeholder="{i18n>userNameLabelText}"
						class="sapUiSmallMarginBeginEnd"
					/>
					<Input
						id="firstName"
						valueLiveUpdate="true"
						width="20%"
						placeholder="{i18n>firstNameLabelText}"
						class="sapUiSmallMarginBeginEnd"
					/>
					<Input
						id="lastName"
						valueLiveUpdate="true"
						width="20%"
						placeholder="{i18n>lastNameLabelText}"
						class="sapUiSmallMarginBeginEnd"
					/>
					<Input
						id="age"
						valueLiveUpdate="true"
						width="20%"
						placeholder="{i18n>ageLabelText}"
						class="sapUiSmallMarginBeginEnd"
					/>
					<Button
						id="save"
						visible="{= ${appView>/updateMode} ? false : true}"
						press=".saveData"
						text="Save"
					/>

					<Button
						id="update"
						visible="{= ${appView>/updateMode} ? true : false}"
						press=".updateData(${appView>/updateID})"
						text="Update"
					/>
					<content>
						<Table
							id="peopleList"
							growing="true"
							growingThreshold="10"
							busy="{appView>/busy}"
							items="{
								path: 'appView>/data'
							}"
						>
							<columns>
								<Column id="userNameColumn">
									<Text text="{i18n>userNameLabelText}"/>
								</Column>
								<Column id="firstNameColumn">
									<Text text="{i18n>firstNameLabelText}"/>
								</Column>
								<Column id="lastNameColumn">
									<Text text="{i18n>lastNameLabelText}"/>
								</Column>
								<Column id="ageColumn">
									<Text text="{i18n>ageLabelText}"/>
								</Column>
								<Column id="actionColumn">
									<Text text="{i18n>action}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{appView>UserName}"/>
									</cells>
									<cells>
										<Text text="{appView>FirstName}"/>
									</cells>
									<cells>
										<Text text="{appView>LastName}"/>
									</cells>
									<cells>
										<Text text="{appView>Age}"/>
									</cells>
									<cells>
										<FlexBox>
											<Button
												id="editUserButton"
												icon="sap-icon://edit"
												press=".onUpdate(${appView>})"
												class="sapUiSmallMarginBeginEnd"
												
											/>
											<Button
												id="deleteUserButton"
												icon="sap-icon://delete"
												press=".onDelete(${appView>id})"
											/>
										</FlexBox>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>